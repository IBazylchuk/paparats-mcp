{
  "name": "@paparats/cli",
  "version": "0.2.6",
  "mcpName": "io.github.IBazylchuk/paparats-mcp",
  "type": "module",
  "description": "CLI for Paparats MCP - semantic code search with AST chunking, symbol graph, and vector search for AI coding assistants",
  "license": "MIT",
  "author": "Ilya Bazylchuk",
  "homepage": "https://github.com/IBazylchuk/paparats-mcp#readme",
  "keywords": [
    "mcp",
    "semantic-search",
    "embedding",
    "qdrant",
    "ollama",
    "cursor",
    "claude",
    "claude-code",
    "model-context-protocol",
    "cli",
    "code-search",
    "ai-assistant",
    "tree-sitter",
    "ast",
    "symbol-graph",
    "docker",
    "code-intelligence"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/IBazylchuk/paparats-mcp.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/IBazylchuk/paparats-mcp/issues"
  },
  "bin": {
    "paparats": "./bin/paparats"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "preferGlobal": true,
  "scripts": {
    "build": "tsc",
    "postbuild": "node -e \"if (process.platform !== 'win32') require('fs').chmodSync('bin/paparats', 0o755)\"",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test"
  },
  "dependencies": {
    "@paparats/shared": "^0.1.2",
    "@inquirer/prompts": "^7.0.0",
    "chalk": "^5.3.0",
    "chokidar": "^4.0.0",
    "commander": "^12.0.0",
    "glob": "^13.0.1",
    "js-yaml": "^4.1.0",
    "minimatch": "^10.0.0",
    "ora": "^8.0.0",
    "p-limit": "^7.3.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  }
}
